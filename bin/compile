#!/bin/bash

BUILD_DIR=$1

VERSION=unrtf-0.21.9
INSTALL_DIR=$BUILD_DIR/vendor/unrtf/

# Extract the source
mkdir -p -m 0700 src
cd src
tar xzvf ../${VERSION}.tar.gz
cd ${VERSION}
test $UID = 0 && chown -R root:root .

echo "Files in config folder"
ls -la config

mkdir -p ${INSTALL_DIR}

aclocal
automake --add-missing
autoreconf -ivf

# Configure the build
./configure --prefix=${INSTALL_DIR}

# Build it
make

# Install it, stripping the binary
echo "install-strip"
make install-strip

ls -la ${INSTALL_DIR}/share/unrtf
mkdir ${INSTALL_DIR}/config
cp -R ${INSTALL_DIR}/share/. ${INSTALL_DIR}/config
echo "ls -la /config"
ls -la ${INSTALL_DIR}/config

echo "Complete!"
echo "Building runtime environment for unrtf int ${BUILD_DIR}"

mkdir -p $BUILD_DIR/.profile.d

echo 'export PATH="$PATH:${HOME}/vendor/unrtf/bin/"' > $BUILD_DIR/.profile.d/unrtf.sh
